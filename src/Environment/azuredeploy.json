{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "prefix": {
            "type": "string",
            "defaultValue": "servicebusestimator"
        },
        "queueName": {
            "type": "string",
            "defaultValue": "myqueue"
        },
        "storageName": {
            "type": "string",
            "defaultValue": "[concat('estimator', uniqueString(resourceGroup().id))]"
        },
        "numberOfReceivers": {
            "type": "int",
            "defaultValue": 2
        }
    },
    "variables": {
        "estimatorPlanName": "[concat(parameters('prefix'),'-plan')]",
        "estimatorAppName": "[concat(parameters('prefix'),'-app')]",
        "receiverPlanNamePrefix": "[concat(parameters('prefix'),'receiver-plan')]",
        "receiverAppNamePrefix": "[concat(parameters('prefix'),'receiver-app')]"
    },
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2021-04-01",
            "name": "[concat(deployment().name, '-shared')]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "relativePath": "nested/azuredeploy-shared.json",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "prefix": {
                        "value": "[parameters('prefix')]"
                    },
                    "queueName": {
                        "value": "[parameters('queueName')]"
                    },
                    "storageName": {
                        "value": "[parameters('storageName')]"
                    },
                    "appName": {
                        "value": "[variables('estimatorPlanName')]"
                    },
                    "receiverNamePrefix": {
                        "value": "[variables('receiverAppNamePrefix')]"
                    },
                    "numberOfReceivers": {
                        "value": "[parameters('numberOfReceivers')]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2021-04-01",
            "name": "[concat(deployment().name, '-estimator')]",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/deployments', concat(deployment().name, '-shared'))]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "relativePath": "nested/azuredeploy-estimator.json",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "planName": {
                        "value": "[variables('estimatorPlanName')]"
                    },
                    "appName": {
                        "value": "[variables('estimatorAppName')]"
                    },
                    "storageConnectionString": {
                        "value": "[reference(concat(deployment().name, '-shared')).outputs.storageConnectionString.value]"
                    },
                    "serviceBusConnectionString": {
                        "value": "[reference(concat(deployment().name, '-shared')).outputs.serviceBusConnectionString.value]"
                    },
                    "appInsightsInstrumentationKey": {
                        "value": "[reference(concat(deployment().name, '-shared')).outputs.appInsightsInstrumentationKey.value]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2021-04-01",
            "name": "[concat(deployment().name, '-receiver-', copyIndex(1))]",
            "resourceGroup": "[concat(parameters('prefix'),'Receiver')]",
            "copy": {
                "name": "receivercopy",
                "count": "[parameters('numberOfReceivers')]"
            },
            "dependsOn": [
                "[resourceId('Microsoft.Resources/deployments', concat(deployment().name, '-estimator'))]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "relativePath": "nested/azuredeploy-receiver.json",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "planName": {
                        "value": "[concat(variables('receiverPlanNamePrefix'), '-', copyIndex(1))]"
                    },
                    "appName": {
                        "value": "[concat(variables('receiverAppNamePrefix'), '-', copyIndex(1))]"
                    },
                    "storageConnectionString": {
                        "value": "[reference(concat(deployment().name, '-shared')).outputs.storageConnectionString.value]"
                    },
                    "serviceBusConnectionString": {
                        "value": "[reference(concat(deployment().name, '-shared')).outputs.serviceBusConnectionString.value]"
                    },
                    "appInsightsInstrumentationKey": {
                        "value": "[reference(concat(deployment().name, '-shared')).outputs.appInsightsInstrumentationKey.value]"
                    }
                }
            }
        }
    ],
    "outputs": {}
}